{
  "name": "shadowverse-log",
  "version": "1.0.0",
  "private": true,
  "description": "Shadowverse Battle Log - Monorepo",
  "scripts": {
    "dev": "pnpm --filter @shadowverse-log/web --filter @shadowverse-log/api run --parallel dev",
    "dev:web": "pnpm --filter @shadowverse-log/web dev",
    "dev:api": "pnpm --filter @shadowverse-log/api dev",
    "build": "pnpm --filter @shadowverse-log/shared build && pnpm run -r build",
    "build:shared": "pnpm --filter @shadowverse-log/shared build",
    "test": "pnpm run -r test",
    "lint": "pnpm run -r lint",
    "format": "pnpm run -r format",
    "type-check": "pnpm run -r type-check"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
