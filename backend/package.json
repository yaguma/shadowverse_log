{
  "name": "shadowverse-battle-log-backend",
  "version": "1.0.0",
  "description": "Shadowverse Battle Log - Cloudflare Workers Backend",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute shadowverse-db --local --file=./src/db/migrations/0000_init.sql",
    "db:migrate:prod": "wrangler d1 execute shadowverse-db --remote --file=./src/db/migrations/0000_init.sql"
  },
  "keywords": [
    "shadowverse",
    "cloudflare",
    "workers",
    "d1"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "wrangler": "^4.51.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.7",
    "zod": "^4.1.13"
  }
}
